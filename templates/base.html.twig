<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <div class="container">
                <a class="brand" href="{{ path('home') }}">Work+</a>
                <nav class="nav" aria-label="Navigation principale">
                    <details class="nav-dropdown">
                        <summary class="nav-link">Decouvrir</summary>
                        <div class="nav-submenu">
                            <a class="nav-submenu-link" href="{{ path('company_index') }}">Entreprises</a>
                            <a class="nav-submenu-link" href="{{ path('offer_index') }}">Offres</a>
                            <a class="nav-submenu-link" href="{{ path('pricing_index') }}">Tarifs</a>
                            <a class="nav-submenu-link" href="{{ path('points_guide_index') }}">Points impact</a>
                        </div>
                    </details>

                    {% if app.user and app.user.isCompany %}
                        <details class="nav-dropdown">
                            <summary class="nav-link">Espace entreprise</summary>
                            <div class="nav-submenu">
                                {% if app.user.company %}
                                    <a class="nav-submenu-link" href="{{ path('company_show', {id: app.user.company.id}) }}">Mon entreprise</a>
                                {% else %}
                                    <a class="nav-submenu-link" href="{{ path('company_new') }}">Mon entreprise</a>
                                {% endif %}
                                <a class="nav-submenu-link" href="{{ path('recruiter_offer_index') }}">Mes offres</a>
                                <a class="nav-submenu-link" href="{{ path('points_claim_index') }}">Mon impact</a>
                                <a class="nav-submenu-link" href="{{ path('application_recruiter_index') }}">Candidatures</a>
                            </div>
                        </details>
                    {% endif %}

                    {% if app.user and app.user.isPerson %}
                        <details class="nav-dropdown">
                            <summary class="nav-link">Mon espace</summary>
                            <div class="nav-submenu">
                                <a class="nav-submenu-link" href="{{ path('application_candidate_index') }}">Mes candidatures</a>
                            </div>
                        </details>
                    {% endif %}

                    {% if app.user and is_granted('ROLE_ADMIN') %}
                        <details class="nav-dropdown">
                            <summary class="nav-link">Admin</summary>
                            <div class="nav-submenu">
                                <a class="nav-submenu-link" href="{{ path('points_claim_review_index') }}">Revue points</a>
                            </div>
                        </details>
                    {% endif %}

                    {% if app.user %}
                        <details class="nav-dropdown">
                            <summary class="nav-link">Compte</summary>
                            <div class="nav-submenu nav-submenu-account">
                                <span class="nav-submenu-text">{{ app.user.email }}</span>
                                <a class="nav-submenu-link" href="{{ path('app_logout') }}">Deconnexion</a>
                            </div>
                        </details>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                </nav>
            </div>
        </header>

        <main class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {% set normalizedMessage = message|lower %}
                    {% set isDuplicateMessage = ('deja utilise' in normalizedMessage) or ('déjà utilisé' in normalizedMessage) %}
                    <div class="flash flash-{{ label }}{{ isDuplicateMessage ? ' flash-duplicate' : '' }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
