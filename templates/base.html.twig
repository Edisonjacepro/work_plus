<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header class="site-header">
            <div class="container">
                <a class="brand" href="{{ path('home') }}">Work+</a>
                <nav class="nav">
                    <a class="nav-link" href="{{ path('company_index') }}">Entreprises</a>
                    <a class="nav-link" href="{{ path('offer_index') }}">Offres</a>
                    {% if app.user and app.user.isCompany %}
                        {% if app.user.company %}
                            <a class="nav-link" href="{{ path('company_show', {id: app.user.company.id}) }}">Mon entreprise</a>
                        {% else %}
                            <a class="nav-link" href="{{ path('company_new') }}">Mon entreprise</a>
                        {% endif %}
                        <a class="nav-link" href="{{ path('recruiter_offer_index') }}">Mes offres</a>
                        <a class="nav-link" href="{{ path('application_recruiter_index') }}">Candidatures</a>
                    {% endif %}
                    {% if app.user and app.user.isPerson %}
                        <a class="nav-link" href="{{ path('application_candidate_index') }}">Mes candidatures</a>
                    {% endif %}
                    {% if app.user %}
                        <span class="nav-link">{{ app.user.email }}</span>
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    {% else %}
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    {% endif %}
                </nav>
            </div>
        </header>

        <main class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash flash-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
